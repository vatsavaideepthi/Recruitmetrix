@model UI.Models.userdashboardtimesheet
@{
    ViewBag.Title = "Edit";
    ViewBag.highlight = "timesheets";
    Layout = "~/Views/timesheet/_timeSheetMasterView.cshtml";

    List<UI.Utilities.customweek> periods = UI.Utilities.DateTimeUtility.GetWeeks(1, 2014);
    UI.Utilities.customweek currentweek = periods.Where(x => x.isCurrentweek == true).First();
}


<div class="page-header-row">
    <div class="col-md-8">
        <span style="color: #e5e5e5;" class="pageheader jobheader">Edit Timesheet Of </span><span class="pageheader jobheader">@Model.timesheetmonth</span>
        <div>
            <span style="line-height: 30px; float: left;">@Model.weektimesheets[0].timesheetweek.startdate.ToShortDateString() - @Model.weektimesheets[0].timesheetweek.enddate.ToShortDateString()</span>
            <input type="hidden" id="timesheetstartdate" value="@Model.weektimesheets[0].timesheetweek.startdate.ToString("yyyy-MM-dd hh:mm:ss")"/>
            <input type="hidden" id="timesheetenddate" value="@Model.weektimesheets[0].timesheetweek.enddate.ToString("yyyy-MM-dd hh:mm:ss")"/>
        </div>
    </div>
    <div class="col-md-4">
        @Html.ActionLink("Back To Dashboard", "dashboard", "timesheet", null, new { @class = "btn-wide pull-right btn-flat btn-grey ", style = "" })
    </div>
</div>
@using (Html.BeginForm("add", "timesheet", FormMethod.Post, new { id = "addtimesheetform" }))
{
    <div>
        <div>
            <table class="table table-bordered timesheetmap">
                <thead>
                    <tr style="text-align: center;">
                        <th style="text-align: left; padding-left: 15px;">Date</th>
                        <th style="text-align: center;">Working Hours</th>
                        <th style="text-align: center;">Over time</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
    UI.Models.AppWeekTimeSheet weektimesheet = Model.weektimesheets[0];
    if (weektimesheet.weektimesheetdata != null && weektimesheet.weektimesheetdata.Items.Item.Length > 0)
    {
        foreach (UI.testmodel.Item daysheet in weektimesheet.weektimesheetdata.Items.Item)
        {
            int j = 1000;
                        <tr class="sheetrow">
                            <td style="text-align: left; padding-left: 15px;">
                                <div>
                                    <input id="editingtimesheetid" type="hidden" value="@weektimesheet.timesheetid"/>
                                    <div style="text-align:center;">
                                          <label class="lbldate" data-date="@daysheet.Date">@(Convert.ToDateTime(daysheet.Date).ToString("dddd"))</label><br />
                                        <label class="lbldate" data-date="@daysheet.Date"> @(Convert.ToDateTime(daysheet.Date).ToString("MMMM,dd yyyy"))</label>
                                    </div>
                                </div>
                            </td>
                            <td style="text-align: center;">
                                <input type="text" class="wrkinghours" value="@daysheet.Workhours" tabindex="@j"/></td>
                            <td style="text-align: center;">
                                <input type="text" class="othoours" value="@daysheet.Overtime" tabindex="@(j+7)"/></td>
                            <td style="text-align: center;"><span class="btn btn-info taskaddinitiate">Add Tasks</span>
                                <div>
                                    <span class="taskcount">@daysheet.Tasks.Task.Length Tasks</span>
                                </div>
                            </td>
                            @for (int i = 0; i < daysheet.Tasks.Task.Length; i++)
                            {
                                <input type="hidden" class="taskitem" data-description="@daysheet.Tasks.Task[i].Description" data-project="@daysheet.Tasks.Task[i].Project" data-taskhours="@daysheet.Tasks.Task[i].Hours">
                            }
                        </tr>
            j++;
        }
    }
    else
    {
                        <tr>
                            <td colspan="3"><span>No Time Sheets Available for editing <a href="/timesheet/add?year=&month=&week">Click here to Add Time Sheet</a></span></td>
                        </tr>
    }
                    }
                    <tr>
                        <td colspan="3" style="text-align: right;">Regular</td>
                        <td style="text-align: center;" class="twhours">@weektimesheet.weektimesheetdata.Metadata.Totalhours</td>
                    </tr>
                    <tr>
                        <td colspan="3" style="text-align: right;">Over Time</td>
                        <td style="text-align: center;" class="totothours">@weektimesheet.weektimesheetdata.Metadata.Overtimehours</td>
                    </tr>
                    <tr>
                        <td colspan="3" style="text-align: right;">Total</td>
                        <td style="text-align: center;" class="swhours">0</td>
                    </tr>
                </tbody>
            </table>

            <div style="padding: 10px 0px 0px 0px;">
                <span class="btn btn-primary pull-right updatetimesheet">Update Time Sheet</span>
            </div>
        </div>
    </div>

}
<div class="ruleholder">
