<div id="addtaskmodal" class="modal fade" style="">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modaltitle3">Add Taks</h3>
                Total Hours : <span class="tasktotalhrs">24</span>
            </div>

            <div class="modal-body">
                <div id="taskhoursexeed" class="alert alert-danger hide">
                    <span>Total Work Hours per a Single day Cannot Exceed 24 Hours</span>
                </div>
                <div>
                    <table id="tasklisttable" class="shadowless table table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Description</th>
                                <th>Project</th>
                                <th>Work Hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="clonelineitem" class="hide">
                                <td><i class="glyphicon glyphicon-remove deletetaskitem" title="Delete Task"></i></td>
                                <td>
                                    <input type="text" placeholder="Add Task Description" class="taskdescription" /></td>
                                <td>
                                    <input type="text" placeholder="Add Project Name" class="taskproject" /></td>
                                <td>
                                    <input type="text" placeholder="Hours" class="taskhours" style="width: 50px;" value="0" /></td>
                            </tr>
                            <tr class="lineitem">
                                <td style="width: 33px;"></td>
                                <td>
                                    <input type="text" placeholder="Add Task Description" class="taskdescription" /></td>
                                <td>
                                    <input type="text" placeholder="Add Project Name" class="taskproject" /></td>
                                <td>
                                    <input type="text" placeholder="Hours" class="taskhours" style="width: 50px;" /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div style="border-top: 1px solid #eee; width: 100%;">
                    <div class="pull-left" style="padding: 10px; cursor: pointer;">
                        <span id="addlineitem"><i class="glyphicon glyphicon-plus"></i>New Line</span>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="AddTaskSettoDay">Add Tasks</button>
            </div>

        </div>
    </div>
</div>
<div class="modal-metadata">
    <input type="hidden" id="taskchosendate" />
    <input type="hidden" id="taskholderbearer" />
</div>


@section Scripts {
    <script src="~/Scripts/tracker/timesheet.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.wrkinghours,.othoours,.twhours,.swhours,.totothours').numeric();
        });
    </script>
    <script>
        $(function () {
            $("#tags").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/AjaxData/GetJsonCustomerlist",
                        type: "POST",
                        dataType: "JSON",
                        data: {
                            tag: ''
                        },
                        success: function (data) {
                            if (data.length > 0) {
                                var result = $.parseJSON((JSON.stringify(data)));
                                response($.map(result, function (k, v) {
                                    return {
                                        label: k.name,
                                        value: k.id
                                    }
                                }))
                            }
                            else {
                                $('#tags').hide();
                                $('#mancrcustblock').show();
                            }
                        },
                        error: function (data) {
                        }
                    })
                },
                select: function (event, ui) {
                    try {
                        $('#currentclientid').val(ui.item.value);
                        $('#tags').val(ui.item.label);
                        $('#chscustomerselected').removeClass('hide');

                    }
